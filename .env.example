# Notion Integration
# Get token from: https://notion.so/my-integrations
NOTION_TOKEN=secret_xxx

# Database IDs (copy from database URL)
# Example https://www.notion.so/Card-[14b364a1215e814b911feddcc11c0d1c] <- DATABASE ID, same for account
EXPENSES_DB_ID=your_expenses_database_id
INCOME_DB_ID=your_income_database_id

# Account Relation IDs (open account page, copy ID from URL)
PRIMARY_ACCOUNT_ID=your_primary_account_id
SECONDARY_ACCOUNT_ID=your_secondary_account_id

# Category Relation IDs (open category page, copy ID from URL)
CATEGORY_FOOD_ID=
CATEGORY_GROCERIES_ID=
CATEGORY_TRANSPORT_ID=
CATEGORY_SHOPPING_ID=
CATEGORY_HEALTH_ID=
CATEGORY_ENTERTAINMENT_ID=
CATEGORY_BILLS_ID=
CATEGORY_TRAVEL_ID=
CATEGORY_TRANSFER_ID=
CATEGORY_OTHER_ID=

# Income Category IDs
CATEGORY_SALARY_ID=
CATEGORY_REFUND_ID=
CATEGORY_OTHER_INCOME_ID=

# TrueLayer (get from truelayer.com)
TL_CLIENT_ID=your_client_id
TL_CLIENT_SECRET=your_client_secret
TL_REDIRECT_URI=http://localhost:8000/callback
TL_PROVIDER=uk-ob-revolut

# Optional
CUTOFF_DATE=YYYY-MM-DD
BASE_CURRENCY=USD
